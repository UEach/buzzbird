#!/usr/bin/make -f
export DEST_DIR=`pwd`
build: build-stamp
build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	#$(MAKE)
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	#$(MAKE) clean
	#$(MAKE) distclean
	dh_clean

install:
install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	# Add here commands to install the package into debian/buzzbird.
	#$(MAKE) prefix=`pwd`/debian/usr install
	mkdir -p debian/tmp/usr/share/buzzbird/chrome/skin/classic

	cp -fr ./chrome/* debian/tmp/usr/share/buzzbird/chrome
	cp -fr debian/tmp/usr/share/buzzbird/chrome/skin/classic-linux/* debian/tmp/usr/share/buzzbird/chrome/skin/classic
	cp debian/tmp/usr/share/buzzbird/chrome/content/notifications/notify-linux.sh debian/tmp/usr/share/buzzbird/chrome/content/notifications/notify.sh
	cp debian/tmp/usr/share/buzzbird/chrome/content/js/notify/notify-linux.js debian/tmp/usr/share/buzzbird/chrome/content/js/notify/notify.js

	rm -fr debian/tmp/usr/share/buzzbird/chrome/skin/classic-*

	cp debian/tmp/usr/share/buzzbird/chrome/content/platform/linux/* debian/tmp/usr/share/buzzbird/chrome/content

	rm -fr debian/tmp/usr/share/buzzbird/chrome/content/platform

	cp -fr ./defaults debian/tmp/usr/share/buzzbird/
	cp application.ini debian/tmp/usr/share/buzzbird/
	cp ./graphics/Buzzbird.png debian/tmp/usr/share/buzzbird/buzzbird.png

	mkdir -p debian/tmp/usr/bin
	cp -p buzzbird.bin debian/tmp/usr/bin/buzzbird
	dh_install -s

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installexamples -i
	dh_installman -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir -a
	dh_testroot -a
	dh_installchangelogs -a
	dh_installdocs -a
	dh_installexamples -a
	dh_installmenu -a
	dh_installman -a
	dh_strip -a
	dh_link -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
